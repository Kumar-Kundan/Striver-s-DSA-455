class Solution {
  public:
    void printTriangle(int n) {
        
        for(int i=1;i<=n;++i){
            
            //for left triangle
            for(int j=1;j<=i;++j)
                cout<<j<<" ";
                
            for(int space=0;space<2*n-2*i;++space)
                cout<<"  ";
                
            //for right triangle
            for(int k=i;k>0;--k)
                cout<<k<<" ";
            cout<<endl;
        }
    }
};
