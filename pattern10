class Solution{
public:
    void printTriangle(int n) {
        //for upper triangle
        for(int i=0;i<n;++i){
           for(int j=0;j<=i;++j)
                cout<<"*"<<" ";
            cout<<endl;
       }
       
       //for lower triangle
       for(int i=1;i<n;++i){
	        for(int j=n;j>i;--j)
	            cout<<"*"<<" ";
	        cout<<endl;
	    }
    }
};
