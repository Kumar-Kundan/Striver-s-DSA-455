class Solution {
  public:
    void printTriangle(int n) {
        char ch=65;     //for character 'A'
       for(int i=0;i<n;++i){
           for(int j=0;j<=i;++j)
               cout<<ch;
               
            //incrementing A to B,B to C and so on
            ch=ch+1;
            cout<<endl;
       }
    }
};
