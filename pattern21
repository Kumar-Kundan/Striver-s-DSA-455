class Solution {
  public:
    void printSquare(int n) {
        for(int i=0;i<n;++i){
            for(int j=0;j<n;++j){
                
                //when row or column is first or last then print * otherwise print space
                if(i==0 || j==0 || i==n-1 || j==n-1)
                   cout<<"*";
                else
                   cout<<" ";
            }
            cout<<endl;
        }
    }
};
