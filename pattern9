class Solution {
  public:
    void printDiamond(int n) {
        //For upper triangle
         for(int i=0;i<n;++i){
            for(int j=0;j<n-i-1;++j)
                cout<<" ";
            for(int k=0;k<=i;++k)
                cout<<"*"<<" ";
            cout<<endl;
        }
	
	//for lower triangle
        for(int i=0;i<n;++i){
	        for(int l=0;l<i;++l)
	        cout<<" ";
	        for(int j=n-i;j>0;--j)
	            cout<<"*"<<" ";
	        cout<<endl;
	    }
    }
};
